---
interface FooterLink {
  label: string;
  href: string;
}

interface Props {
  links?: FooterLink[];
  licenseText?: string;
}

const defaultLinks: FooterLink[] = [
  { label: 'Feature Request: storybookjs/storybook#18356', href: 'https://github.com/storybookjs/storybook/issues/18356' },
  { label: 'Storybook Framework Docs', href: 'https://storybook.js.org/docs/configure/integration/frameworks' },
  { label: 'Astro Container API', href: 'https://docs.astro.build/en/reference/container-reference/' },
];

const {
  links = defaultLinks,
  licenseText = 'Licensed under MIT',
} = Astro.props;
---

<footer>
  <div class="footer-content">
    <div class="links">
      {links.map((link) => (
        <a href={link.href} target="_blank" rel="noopener noreferrer">
          {link.label}
        </a>
      ))}
    </div>
    <p class="license">{licenseText}</p>
  </div>
</footer>

<style>
  footer {
    background-color: #1a1a2e;
    width: 100%;
    padding: 2rem 0;
    margin-top: auto;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .links {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .links a {
    color: #e0e0e0;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  /* Desktop: centered with bullet separators */
  @media (min-width: 768px) {
    .links {
      flex-direction: row;
      justify-content: center;
      gap: 0;
    }

    .links a:not(:last-child)::after {
      content: 'â€¢';
      color: #a0a0a0;
      margin: 0 1rem;
    }
  }

  .links a:hover {
    color: #ffffff;
    text-decoration: underline;
  }

  .license {
    color: #a0a0a0;
    font-size: 0.85rem;
    margin: 0;
  }
</style>
